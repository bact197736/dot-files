#!/bin/sh
#
# Run specs with great speed and daring-do.
#

if [ -S .zeus.sock ]; then
  zeus test $@
elif grep rspec Gemfile > /dev/null ; then
  if [ -f bin/rspec ]; then
    ./bin/rspec $@
  else
    bundle exec rspec $@
  fi
else
  if [ -f bin/m ]; then
    ./bin/m $@
  else
    bundle exec m $@
  fi
fi

